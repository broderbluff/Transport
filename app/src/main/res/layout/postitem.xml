<?xml version="1.0" encoding="utf-8"?>
<!-- postitem.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >

    <ImageView
        android:id="@+id/postThumb"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/circle_0"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/postTitleLabel"
        android:layout_width="0dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/postThumb"
        android:layout_toRightOf="@id/postThumb"
        android:maxLines="2"
        android:textColor="#808080"

        android:textStyle="bold"
        android:text="This is a good Post, I hope it will have 2 lines. Please give me 2 lines"
        android:textIsSelectable="false"
        android:textSize="16sp"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/postDescription"
        android:layout_width="0dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_below="@+id/postTitleLabel"
        android:layout_toRightOf="@id/postThumb"

        android:textColor="#808080"


        android:text="This is a good Post, I hope it will have 2 lines. Please give me 2 lines, This is a good Post, I hope it will have 2 lines. Please give me 2 lines, This is a good Post, I hope it will have 2 lines. Please give me 2 lines"
        android:textIsSelectable="false"
        android:textSize="14sp"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/postDateLabel"
        android:layout_width="0dp"
       android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#808080"
        android:layout_toRightOf="@id/postThumb"
        android:layout_below="@+id/postDescription"
        android:maxLines="1"
        android:text="April 12, 2013"
        android:textSize="12sp"
        />

    <TextView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="T"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="32sp"
        android:id="@+id/postFirstLetter"
        android:gravity="center"
        android:layout_alignTop="@+id/postThumb"
        android:layout_alignRight="@+id/postThumb"
        android:layout_alignLeft="@+id/postThumb"
        android:layout_alignBottom="@+id/postThumb"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
