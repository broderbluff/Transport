<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/marker_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/container"
      >

    <TextView
        android:id="@+id/avdLabel"
        android:text="Avdelning 12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:textSize="21sp" />


    <TextView
        android:id="@+id/contactTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kontakta Avd 12"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:textSize="17sp"
        android:layout_below="@+id/avdRegionLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefon:"
        android:id="@+id/telTitleLabel"
        android:layout_below="@+id/contactTitleLabel"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="010-4803012"
        android:id="@+id/telnumberLabel"
        android:layout_below="@+id/contactTitleLabel"
        android:layout_toRightOf="@+id/telTitleLabel"
        android:layout_toEndOf="@+id/telTitleLabel"
        android:textSize="17sp"
        android:textColor="@color/button_color_blue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-post:"
        android:id="@+id/emailTitleLabel"
        android:layout_below="@+id/telTitleLabel"
        android:layout_alignLeft="@+id/telTitleLabel"
        android:layout_alignStart="@+id/telTitleLabel"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="transport.12@transport.se"
        android:id="@+id/emailAddressLabel"
        android:layout_below="@+id/telnumberLabel"
        android:layout_alignLeft="@+id/telnumberLabel"
        android:layout_alignStart="@+id/telnumberLabel"
        android:textSize="17sp"
        android:textColor="@color/button_color_blue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postadress"
        android:id="@+id/postTitleLabel"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:layout_below="@+id/emailTitleLabel"
        android:layout_alignLeft="@+id/contactTitleLabel"
        android:layout_alignStart="@+id/contactTitleLabel"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transportarbetareförbundet"
        android:id="@+id/postTransportTitle"
        android:layout_below="@+id/postTitleLabel"
        android:layout_alignLeft="@+id/emailTitleLabel"
        android:layout_alignStart="@+id/emailTitleLabel"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avd 12"
        android:id="@+id/postAvdLabel"
        android:layout_below="@+id/postTransportTitle"
        android:layout_alignLeft="@+id/postTransportTitle"
        android:layout_alignStart="@+id/postTransportTitle"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kosterögatan 5"
        android:id="@+id/postAdressLabel"
        android:layout_below="@+id/postAvdLabel"
        android:layout_alignLeft="@+id/postAvdLabel"
        android:layout_alignStart="@+id/postAvdLabel"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21124 Malmö"
        android:id="@+id/postNrLabel"
        android:layout_below="@+id/postAdressLabel"
        android:layout_alignLeft="@+id/postAdressLabel"
        android:layout_alignStart="@+id/postAdressLabel"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Öppettider"
        android:id="@+id/openHoursTitleLabel"
        android:layout_below="@+id/postNrLabel"
        android:layout_alignLeft="@+id/postTitleLabel"
        android:layout_alignStart="@+id/postTitleLabel"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mån-fre kl:"
        android:id="@+id/openDaysLabel"
        android:layout_below="@+id/openHoursTitleLabel"
        android:layout_alignLeft="@+id/postNrLabel"
        android:layout_alignStart="@+id/postNrLabel"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08.00-16.40"
        android:id="@+id/openHoursLabel"
        android:layout_alignTop="@+id/openDaysLabel"
        android:layout_toRightOf="@+id/openDaysLabel"
        android:layout_toEndOf="@+id/openDaysLabel"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Malmö"
        android:id="@+id/avdRegionLabel"
        android:textSize="19sp"
        android:layout_below="@+id/avdLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/telTitleLabel"
        android:layout_alignStart="@+id/telTitleLabel" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/closeDialog"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
             />

    </RelativeLayout>

</RelativeLayout>