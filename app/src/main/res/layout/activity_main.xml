<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@mipmap/xxhdpiback">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sök företag"
        android:id="@+id/textView"
        android:textColor="#fff"

        android:textSize="20sp"
        style="@style/ShadowText"
        android:layout_above="@+id/imageInfo"
        android:layout_alignLeft="@+id/searchButton"
        android:layout_alignStart="@+id/searchButton"
        android:layout_marginBottom="17dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/searchButton"
        android:onClick="searchClick"
        android:background="@drawable/xxhdpisearchicon"
        android:layout_above="@+id/textView"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"/>

    <ImageButton
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:id="@+id/imageLogo"
        android:onClick="logoClick"
        android:background="@drawable/xxhdpilogo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/imageInfo"
        android:onClick="infoClick"
        android:background="@drawable/xxhdpiinfo"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        android:layout_above="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Varför kollektivavtal?"
        android:id="@+id/textView2"
        android:textColor="#fff"
        style="@style/ShadowText"
        android:layout_marginBottom="92dp"
        android:layout_above="@+id/imageLogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
